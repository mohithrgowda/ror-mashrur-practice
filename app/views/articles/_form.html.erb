<div class="container">
  <div class="justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" %> <%= form_with(model: @article,class:"shadow
      p-3 mb-3 bg-info rounded", local:true) do |f| %>
      <div class="form-group row mb-3">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded",
          placeholder: "Title of article" %>
        </div>
      </div>
      <div class="form-group row mb-3">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow
          rounded", placeholder: "Description of article" %>
        </div>
      </div>

      <div class="form-group now text-center">
        <%= f.submit class: "btn btn-primary btn-lg bg-info btn-outline-light
        "%>
      </div>

      <% end %>
    </div>
  </div>
</div>
